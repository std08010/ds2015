<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/slotBg"
              android:orientation="vertical"
              android:weightSum="1"
              tools:ignore="ContentDescription">

    <LinearLayout
        android:id="@+id/user_profile_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/slotsItemMargin"
        android:background="@drawable/bg_slot_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_profile_questionPublishDate"
            style="@style/feedPublishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="date"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/user_profile_questionBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_profile_questionCaption"
                style="@style/photoFeedCaption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/status"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>